datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

   @@map("user")
}

// The fresh new model
model Task {
  id         Int      @id @default(autoincrement())
  title      String
  assignedTo String
  status     String
  createdAt  DateTime @default(now()) // Keep this, it helps sort tasks by newest

  @@map("tasks")
}